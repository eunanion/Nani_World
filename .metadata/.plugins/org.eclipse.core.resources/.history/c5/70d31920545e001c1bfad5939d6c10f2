package interaction;

public class Buyer {
	private int mango;
	private int money;
	
	public Buyer(int money) {
		this.mango = mango;
		this.money = money;
	}
	
	public void buyMango(Seller seller,int mango) {
		
		if(this.money < mango*4000) {
			System.out.println("소지금이 부족합니다.");
			return;
			
		}
		else if(seller.getMango() < mango){
			System.out.println("망고갯수가 부족합니다.");
			return;
		}else {
		}
			seller.sellMango(mango);
		this.money -= mango * 4000;
		this.mango += mango;
		System.out.println("현재 소지금은 : "+ this.money);
		System.out.println("구매한 망고 갯수는 : "+ this.mango);
	
		}
	public void showBuyer() {
		System.out.println("---------구매자 정보--------");
		 System.out.println("소지중인 망고 갯수 : " +mango+ ", 잔여금액 : "+ money);
		 System.out.println("-----------------------");
	}
	  
	}


