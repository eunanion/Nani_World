package interaction;

public class Main01 {

	public static void main(String[] args) {
		
		Buyer b = new Buyer(100000);
		Seller s1 = new Seller(30);
		Seller s2 = new Seller(5);
		
		s1.showSeller(); //상인1 정보
		s2.showSeller();
		b.showBuyer();
		// 구매자가 상인2를 좋아합니다. 그래서 상인에게 사러갑니다
		b.buyMango(s1, 5);
		
		s1.showSeller();
		s2.showSeller();
		b.showBuyer();
		
		System.out.println("==========s2에게 구매=======");
		
		b.buyMango(s2, 5);
		
		s1.showSeller();
		s2.showSeller();
		b.showBuyer();
		
		System.out.println("=========s1에게 구매=========");
		//b.buyMango(s2,10); //망고재고 부족
		b.buyMango(s1, 10);
		
		s1.showSeller();
		s2.showSeller();
		b.showBuyer();
		

	}
	

}
