package accessmodifier;

public class Warrior {
	
	// hp,mp,lv,exp,atk,def
	//선언
	public String name;
	public int hp;
	public int mp;
	public int lv;
	public int exp;
	public int atk;
	public int def;

	//생성자를 만들어주셍7
	public Warrior(String n) {
		name = n;
		hp = 20;
		mp = 10;
		lv = 1;
		atk = 3;
		def = 0;
		exp = 0;
		System.out.println("아이디 : " + name + "직업 : 전사로 생성 완료 하였습니다");
	}
	
	
	public void hunt() {
		hp -= 2;
		exp += 10;
		System.out.println("현재 체력은 "+hp+" 입니다.");
		System.out.println("현재 경험치는 "+exp + " 입니다.");
	}
	
	
}
